@model OrderModel

<br>
<h3>Siparisi Tamamla</h3>
<div class="row">
    <div class="col-md-8">
        
        <form method="post" asp-action="Siparis">
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                        <label asp-for="Email" class="form-label">Ad Soyad Giriniz:</label>

                <input asp-for="@Model.Name" class="form-control">
            </div>
            
                <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail Giriniz:</label>

                <input asp-for="@Model.Email" class="form-control">
            
            </div>
             <div class="mb-3">
        <label asp-for="Email" class="form-label">Adresinizi Giriniz:</label>
                <textarea asp-for="@Model.orderAdres" class="form-control"></textarea>
            </div>
        
        <button type="submit"  class="btn btn-primary">Submit</button>

        </form>
    </div>

    

</div>

